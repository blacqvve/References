<div class="limiter">
  <div class="container-login100" style="background-image: url('../images/bg-01.jpg');">
    @if (ViewBag.Error == null)
    {
      <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Hoşgeldin!</h4>
        <p>E-mail adresinizi başarıyla doğruladınız. Caston uygulamasını kullanmaya devam edebilirsiniz.</p>
        <hr>
      </div>
    }
    else
    {
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">@ViewBag.Error</h4>
        <p></p>
        <hr>
        <p class="mb-0">Eğer bu hatanın geçersiz olduğunu düşünüyorsanız lütfen <a class="btn-link" href="mailto:destek@caston.tv">bizimle iletişime geçin.</a></p>
      </div>
    }
    </div>
  </div>
  @section scripts{
    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
