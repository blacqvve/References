}
<div class="limiter">
  <div class="container-login100" style="background-image: url('../images/bg-01.jpg');">
    @if (ViewBag.Error == null)
    {
      <div class="wrap-login100">
        <form class="login100-form validate-form" asp-action="ResetPassword">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="Id" />
          <input type="hidden" asp-for="ResetPasswordToken" />
          <span class="login100-form-logo">
            <img src="~/images/logo.png" width="120px" height="120px" />
          </span> 

          <span class="login100-form-title p-b-34 p-t-27" style="text-transform:capitalize">
            Şifre Yenileme
          </span>

          <div class="wrap-input100 validate-input" data-validate="Enter username">
            <input asp-for="Password" placeholder="Yeni Şifreniz" class="form-control"  autocomplete="off"/>
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>

          <div class="container-login100-form-btn">
            <button class="login100-form-btn">
              Güncelle
            </button>
          </div>
          @if (ViewBag.Success != null)
          {
            <div class="alert alert-success" role="alert">
              <p>@ViewBag.Success</p>
            </div>
          }
        </form>
      </div>
    }
    else
    {
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">@ViewBag.Error</h4>
        <hr>
        <p class="mb-0">Eğer bu hatanın geçersiz olduğunu düşünüyorsanız lütfen <a class="btn-link" href="mailto:destek@caston.tv">bizimle iletişime geçin.</a></p>
      </div>
    }
  </div>
</div>
