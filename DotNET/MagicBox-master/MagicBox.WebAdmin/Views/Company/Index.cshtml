@model IEnumerable<MagicBox.Data.Models.UserInfo>

@{
  ViewData["Title"] = "Index";
}

<p>
  <a class="btn btn-outline-primary" asp-action="Create">Yeni</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.User.UserName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Address)
      </th>
      <th>
        Picture
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
          <img src="@MagicBox.Data.Helpers.Utils.GetImageSourceFromByteArray( item.Picture)" width="100" />
        </td>
        <td>
          @*<a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |*@
          <a class="btn btn-outline-success" asp-controller="CouponCode" asp-action="Manage" asp-route-id="@item.UserId">Kupon Kodları</a>
          <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.UserId">Sil</a>
        </td>
      </tr>
    }
  </tbody>
</table>