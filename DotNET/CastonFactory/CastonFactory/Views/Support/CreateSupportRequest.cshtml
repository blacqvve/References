@model CastonFactory.Models.SupportModels.UserCreateSupportRequestVM

@{
  ViewData["Title"] = "Destek Talebi Oluştur";
}
<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header">
              <strong>Destek Talebi</strong> Oluştur
            </div>
            <div class="card-body card-block">
              <form asp-action="CreateSupportRequest" asp-controller="Support" method="post" class="form-horizontal">
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label asp-for="ContentID" class=" form-control-label">Destek ile igili içeriğiniz</label>
                  </div>
                  <div class="col-12 col-md-9">
                    <select asp-for="ContentID" id="select" class="form-control" asp-items="@(new SelectList(ViewBag.ContentsSelect, "Id", "CreationName"));">
                    </select>
                      <span asp-validation-for="ContentID" class="text-danger"></span>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col col-md-3">
                    <label asp-for="Subject" class=" form-control-label">Destek Konusu</label>
                  </div>
                  <div class="col-12 col-md-9">
                    <input asp-for="Subject" placeholder="Başlık" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                  </div>
                </div>

                <div class="row form-group">
                  <div class="col col-md-3">
                    <label asp-for="Message" class=" form-control-label">Destek Mesajı</label>
                  </div>
                  <div class="col-12 col-md-9">
                    <textarea asp-for="Message" placeholder="Mesajınız..." class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                  </div>
                </div>
                <button type="submit" value="İçeriği Ekle" class="btn btn-primary btn-sm">
                  <i class="fa fa-dot-circle-o"></i> Gönder
                </button>
                <button type="submit" asp-controller="User" asp-action="ContentIndex" class="btn btn-danger btn-sm">
                  <i class="fa fa-ban"></i> Geri
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
